@model ASP_MVC_SitePandas.Models.PersonnesAutoriser;
@{
    ViewData["Title"] = "Edit";

}

<section id="personneAutorise" class="padd-section">

    <div class="container" data-aos="fade-up">
        <div class="section-title text-center">
            <h2>Personnes autorisés</h2>
            <p class="" style="text-align: center">Veuillez remplir les champs ci dessous pour modifier la personne autorisé.</p>
        </div>

        <div class="row justify-content-center" data-aos="fade-up" data-aos-delay="100">


            <div class="col-lg-5 col-md-8">

                <div class="form">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id"/>
                        <div class="form-group">
                            <input asp-for="Nom" type="text" class="form-control" id="nom" placeholder="Nom de l'enfant" required>
                            <span asp-validation-for="Nom" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input asp-for="Prenom" type="text" class="form-control" id="prenom" placeholder="Prénom" required>
                            <span asp-validation-for="Prenom" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input asp-for="Telephone" type="tel" class="form-control" id="telephoneRep" placeholder="Téléphone" required>
                            <span asp-validation-for="Telephone" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input asp-for="LienEnfant" type="text" class="form-control" id="lienEnfant" placeholder="username" required>
                            <span asp-validation-for="LienEnfant" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <select asp-for="ContactUrgence" style="color:gray" id="contactUrgence" class="form-select" aria-label="Default select example">
                                <option value="Oui">Oui</option>
                                <option selected value="Non">Non</option>
                            </select>
                            <span asp-validation-for="ContactUrgence" class="text-danger"></span>
                        </div>
                        <div class="form-group" style="padding-top: 10px;">
                            <select asp-for="EnfantId" class="form-control" asp-items="ViewBag.EnfantId"></select>
                        </div>
                        <div style="padding-top: 20px" class="text-center"><button class="btn" style="background-color:limegreen" type="submit" value="Save">Modifier</button></div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>