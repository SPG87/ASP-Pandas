@model ASP_MVC_SitePandas.Models.Garderie;
@{
    ViewData["Title"] = "Edit";

}

<section id="Garderie" class="padd-section">

    <div class="container" data-aos="fade-up">
        <div class="section-title text-center">
            <h2>Info garderie</h2>
            <p class="" style="text-align: center">Veuillez remplir les champs ci dessous pour modifier les informations de la garderie.</p>
        </div>

        <div class="row justify-content-center" data-aos="fade-up" data-aos-delay="100">


            <div class="col-lg-5 col-md-8">

                <div class="form">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <input asp-for="Nom" type="text" class="form-control" id="Nom" placeholder="Nom de la garderie" required>
                            <span asp-validation-for="Nom" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input asp-for="Adresse" type="text" class="form-control" id="Adresse" placeholder="Adresse" required>
                            <span asp-validation-for="Adresse" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input asp-for="Ville" type="text" class="form-control" id="ville" placeholder="Ville" required>
                            <span asp-validation-for="Ville" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input asp-for="CodePostal" type="text" class="form-control" id="CodePostal" placeholder="Code Postal" required>
                            <span asp-validation-for="CodePostal" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Telephone" type="tel" class="form-control" id="Telephone" placeholder="Telephone" required>
                            <span asp-validation-for="Telephone" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Description" type="text" class="form-control" id="Description" placeholder="Description" required>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div style="padding-top: 20px" class="text-center"><button class="btn" style="background-color:limegreen" type="submit" value="Save">Modifier</button></div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>