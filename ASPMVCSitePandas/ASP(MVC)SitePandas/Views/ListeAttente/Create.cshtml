@model ASP_MVC_SitePandas.Models.ListeDattente

@{
    ViewData["Title"] = "Create";
}

<section id="listeAttente" class="padd-section">

    <div class="container" data-aos="fade-up">
        <div class="section-title text-center">
            <h2>Liste d'attente</h2>
            <p class="" style="text-align: center">Veuillez remplir les champs ci dessous pour ajouter l'enfant.</p>
        </div>

        <div class="row justify-content-center" data-aos="fade-up" data-aos-delay="100">


            <div class="col-lg-5 col-md-8">

                <div class="form">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <input asp-for="Nom" type="text" class="form-control" id="nom" placeholder="Nom" required>
                            <span asp-validation-for="Nom" class="text-danger"></span>
                        </div>
                        <div class="form-group" style="padding-top: 10px; padding-bottom:10px">
                            <input asp-for="Prenom" type="text" class="form-control" id="prenom" placeholder="Prénom" required>
                            <span asp-validation-for="Prenom" class="text-danger"></span>
                        </div>

                        <div class="form-group" style="padding-top: 10px">
                            <input asp-for="Telephone" type="tel" class="form-control" id="telephone" placeholder="Téléphone" required>
                            <span asp-validation-for="Telephone" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-3">
                            <input asp-for="Couriel" type="text" class="form-control" id="email" placeholder="Adresse courriel" required>
                            <span asp-validation-for="Couriel" class="text-danger"></span>
                        </div>
                        <div class="form-group" style="padding-top: 10px; padding-bottom:10px">
                            <input asp-for="NombreEnfants" type="number" class="form-control" id="nbrEnfants" placeholder="Nombre d'enfants" required>
                            <span asp-validation-for="NombreEnfants" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-3">
                            <textarea asp-for="Description" class="form-control" rows="5" placeholder="Message" required></textarea>
                        </div>
                        <div style="padding-top: 20px" class="text-center"><button class="btn" style="background-color:limegreen" type="submit" value="Create">Ajouter</button></div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
