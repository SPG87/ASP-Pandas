@model ASP_MVC_SitePandas.Models.TypeEvenement

@{
    ViewData["Title"] = "Create";
}

<section id="TypeEvenements" class="padd-section">

    <div class="container" data-aos="fade-up">
        <div class="section-title text-center">
            <h2>Types d'évènements</h2>
            <p class="" style="text-align: center">Veuillez remplir les champs ci dessous pour ajouter un type d'évènement.</p>
        </div>

        <div class="row justify-content-center" data-aos="fade-up" data-aos-delay="100">


            <div class="col-lg-5 col-md-8">

                <div class="form">
                    <form asp-action="Create">
                        <div class="form-group">
                            <input asp-for="TypeEvenement1" type="text" class="form-control" id="typeEvenement" placeholder="Nom de l'évènement" required>
                            <span asp-validation-for="TypeEvenement1" class="text-danger"></span>
                        </div>

                        <div style="padding-top: 20px" class="text-center"><button class="btn" style="background-color:limegreen" type="submit" value="Create">Ajouter</button></div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}